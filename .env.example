# =============================
# MAINTENANCE SCRIPT CONFIGURATION
# =============================
# Copy file ini ke .env dan sesuaikan dengan environment Anda

# Backend API URL
# Untuk localhost (development)
API_URL=http://localhost:3000/api/pc-reports/submit

# Untuk server LAN (production)
# API_URL=http://192.168.72.27:3000/api/pc-reports/submit

# Untuk cloud server
# API_URL=https://your-domain.com/api/pc-reports/submit

# Retry settings
API_TIMEOUT=30
API_RETRY_COUNT=3

# Cloud sync settings (untuk sync-cloud.ps1)
CLOUD_URL=https://raw.githubusercontent.com/your-repo/maintenance-scripts/main/script.ps1
# Atau gunakan server sendiri:
# CLOUD_URL=http://192.168.72.27/scripts/script.ps1

LOCAL_SCRIPT_PATH=C:\MaintenanceScripts
SCRIPT_NAME=maintenance.ps1

# Auto-run after sync
AUTO_RUN=false

# Force download (ignore version check)
FORCE_DOWNLOAD=false
